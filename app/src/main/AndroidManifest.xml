<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nayaproject.e_cards">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_invitation"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Dashain"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Newyear"
            android:screenOrientation="portrait" />
        <activity android:name=".Christmas" />
        <activity
            android:name=".Christmasbg"
            android:screenOrientation="portrait" />
        <activity android:name=".Newyearbg" />
        <activity android:name=".Dashainbg" />
        <activity android:name=".Holibg" />
        <activity android:name=".Holi"></activity>
    </application>

</manifest>